<MainScreen>:
    id: main_screen
    name: 'main_screen'
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(10)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        MDLabel:
            text: 'Vă rog selectați o opțiune de mai jos'
            font_style: 'H4'
            halign: 'center'
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            size_hint: None, None
            pos_hint: {'center_x': 0.5,}
            MDRectangleFlatButton:
                text: 'Camera'
                text_color: app.theme_cls.opposite_bg_dark
                md_bg_color: app.theme_cls.primary_light
                on_release: app.sm.current = 'camera_screen'
            MDRectangleFlatButton:
                text: 'Galerie'
                text_color: app.theme_cls.opposite_bg_dark
                md_bg_color: app.theme_cls.primary_dark
                on_release: app.sm.current = 'gallery_screen'
